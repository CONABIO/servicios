<% if notice.present? %>
  <div class="alert alert-primary" role="alert" id="notice"><%= notice %></div>
<% end %>
<div class="jumbotron">
  <h1 class="display-4"><%= @evento.titulo %></h1>
  <p class="lead">
    <%= @evento.actividad %><% ": #{@evento.otra_actividad}" if @evento.actividad == 'Otra'%> <br>
    <%= @evento.publico_meta %> <br>
    <%= @evento.formato %> <br>
    <%= @evento.estado %> <br>
    <small><%= @evento.fecha_ini.strftime('%d/%m/%y - %H:%M') %> - <%= @evento.fecha_fin.strftime('%d/%m/%y - %H:%M') %></small> <br>
    <%= "<strong class='text-success'>Día nacional de celebracion</strong>".html_safe if @evento.celebracion %>
  </p>
  <hr class="my-4">
  <p>
    <%= @evento.descripcion %> <br>
    <strong><i class="fa fa-info-circle"></i> </strong><%= @evento.informes %>
  </p>
  <%  if @usuario.present? %>
    <hr class="my-4">
    <div class="d-flex align-items-center">
      <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_calendario_evento_url(@evento), class: 'btn btn-sm btn-primary mx-2' %>
      <%= button_tag '<i class="fa fa-trash"></i>'.html_safe, type: 'button', class: 'btn btn-sm btn-danger mx-2', onclick: "$('#rusure').show();" %>
      <div class="alert alert-danger mx-3 my-0 py-2 w-100" role="alert" id="rusure" style="display: none;">
        ¿Estás seguro?
        <%= link_to 'Sí', calendario_evento_url(@evento), "data-metodo" => "delete", class: 'btn btn-sm btn-danger mx-2' %>
        <%= button_tag 'No', type: 'button', class: 'btn btn-sm btn-secondary mx-2', onclick: "$('#rusure').hide();" %>      </div>
    </div>
    <p class="text-right h6">Evento creado por: <strong><%= @usuario %></strong></p>
  <% end %>
  <%= link_to '« Regresar a eventos'.html_safe, mis_eventos_calendario_eventos_url, class: 'btn btn-link pl-0' %>
</div>
