<% if notice.present? %>
  <div class="alert alert-primary" role="alert" id="notice"><%= notice %></div>
<% end %>

<div id="eventos-container" class="my-3">
  <div class="row">
    <div class="col-10" id="list-container">
      <%= month_calendar(events: @eventos) do |date, eventos| %>
        <h5><%= date.day %></h5>
        <% eventos.each do |evento| %>
            <a class="list-eventos btn btn-outline-dark btn-block btn-sm m-0 text-left rounded-0 border-0 shadow-sm" id="list-evento-<%= evento.id %>-list" href="<%= calendario_evento_url(evento) %>">
              <%= evento.titulo %>
            </a>
          <% end %>
      <% end %>
    </div>
    <div class="col">
      <div class="tab-content" id="evento-content"></div>
    </div>
  </div>
</div>


