<% if notice.present? %>
  <div class="alert alert-primary" role="alert" id="notice"><%= notice %></div>
<% end %>

<div id="eventos-container" class="my-3">
  <div class="row">
    <div class="col" id="list-container">
      <%= month_calendar(events: @eventos, partial: 'simple_calendar/month_calendar') do |date, eventos| %>
        <h5 class="text-white-50 px-2 text-right"><%= date.day %></h5>
        <% eventos.each do |evento| %>
            <a class="list-eventos btn btn-outline-light btn-block btn-sm ml-0 text-left rounded-0 border-0 shadow-sm" id="list-evento-<%= evento.id %>-list" href="/servicios<%= calendario_evento_path(evento) %>">
              <%= evento.titulo %>
            </a>
          <% end %>
      <% end %>
    </div>
    <div class="col-4">
      <div class="tab-content" id="evento-content"></div>
    </div>
  </div>
</div>


